<Window x:Class="StammbaumVisual.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StammbaumVisual"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525" Loaded="Window_Loaded" Initialized="Window_Initialized">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2"/>
            <ColumnDefinition />
            <ColumnDefinition Width="2"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2"/>
            <RowDefinition />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="2"/>
        </Grid.RowDefinitions>

        <Grid Name="gameGrid" Grid.Column="1" Grid.Row="1">
        </Grid>

        <StackPanel Grid.Column="1" Grid.Row="2" >
            <Label Name="datum" Content="-" FontSize="10"/>
            <Label Name="output" Content="-" FontSize="10" />
        </StackPanel>
        
    </Grid>
</Window>
